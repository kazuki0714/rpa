<h1>顧客一覧</h1>
<div class="main customers-index">
  <div class="container">
    <% @customers.each.with_index(1) do |customer, i| %>
    <div class="customers-index-item">
  <table border="1">
  <tr>
    <th>id</th>
    <th>会社名</th>
    <th>業態</th>
    <th>お客様名</th>
    <th>担当者</th>
    <th>備考</th>
    <th></th>
  </tr>

  <tr>
    <td><%= i %></td>
    <td><%= customer.company %></td>
    <td><%= customer.category %></td>
    <td><%= customer.name %></td>
    <td><%= customer.staff %></td>
    <td><%= customer.note %></td>
    <td><%= link_to("詳細", "/customers/#{customer.id}") %></td>
  </tr>
  </table>

    <% end %>
  </div>
</div>
